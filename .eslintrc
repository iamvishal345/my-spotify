{
  "extends": ["airbnb", "airbnb/hooks","react-app/jest",
    "plugin:jsx-a11y/strict"],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "jsx-a11y"
  ],
  "rules": {
    "jsx-a11y/label-has-associated-control": [
      "error",
      {
        "required": {
          "some": [
            "nesting",
            "id"
          ]
        }
      }
    ],
    "jsx-a11y/label-has-for": [
      "error",
      {
        "required": {
          "some": [
            "nesting",
            "id"
          ]
        }
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
